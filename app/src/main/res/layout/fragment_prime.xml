<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/layout_liner"
    android:layout_height="match_parent"
    tools:context=".PrimeFragment"
   >

    <EditText
        android:id="@+id/number_equal"
        android:layout_width="233dp"
        android:layout_height="67dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="42dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:text="SỐ NGUYÊN TỐ"
        android:textColor="#118015"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/result_equal"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="242dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkequaion"
        android:layout_width="186dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="117dp"
        android:background="@drawable/layout_btn"
        android:layout_marginTop="341dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Kiểm tra"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="163dp"
        android:text="Nhập số "
        android:textStyle="bold"
        android:textColor="#118015"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="-122dp"
        android:layout_marginBottom="317dp"
        android:layout_toStartOf="@+id/result_equal"
        android:text="Kết quả "
        android:textColor="#118015"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>